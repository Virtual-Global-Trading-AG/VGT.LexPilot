{
  "name": "lexilot-backend-functions",
  "version": "1.0.0",
  "description": "LexPilot AI Backend - Firebase Functions with TypeScript",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:integration": "npm run build && node lib/test-setup.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "setup:env": "./setup-firebase-env.sh",
    "setup:firebase": "firebase functions:config:get",
    "setup:complete": "npm run setup:env && npm run build && npm run deploy",
    "dev": "npm run build:watch",
    "predeploy": "npm run lint && npm run test && npm run build",
    "postdeploy": "npm run logs"
  },
  "engines": {
    "node": "22"
  },
  "dependencies": {
    "@google-cloud/storage": "^7.16.0",
    "@langchain/community": "^0.3.50",
    "@langchain/core": "^0.3.67",
    "@langchain/openai": "^0.6.4",
    "@langchain/pinecone": "^0.2.0",
    "@pinecone-database/pinecone": "^5.1.2",
    "@types/joi": "^17.2.2",
    "@types/pdf-parse": "^1.1.5",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^6.4.0",
    "helmet": "^7.1.0",
    "joi": "^17.13.3",
    "langchain": "^0.3.27",
    "mammoth": "^1.6.0",
    "module-alias": "^2.2.3",
    "multer": "^1.4.5-lts.1",
    "natural": "^8.1.0",
    "node-nlp": "5.0.0-alpha.5",
    "pdf-parse": "^1.1.1",
    "pinecone-client": "^1.1.0",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^4.7.4",
    "ts-node": "^10.9.2",
    "tsyringe": "^4.8.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/module-alias": "^2.0.4",
    "@types/multer": "^1.4.11",
    "@types/node": "^22.10.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "firebase-functions-test": "^3.1.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2"
  },
  "_moduleAliases": {
    "@": "./lib",
    "@config": "./lib/config",
    "@controllers": "./lib/controllers",
    "@services": "./lib/services",
    "@repositories": "./lib/repositories",
    "@models": "./lib/models",
    "@utils": "./lib/utils",
    "@middleware": "./lib/middleware",
    "@factories": "./lib/factories",
    "@strategies": "./lib/strategies",
    "@observers": "./lib/observers",
    "@decorators": "./lib/decorators",
    "@chains": "./lib/chains",
    "@agents": "./lib/agents",
    "@vectorstore": "./lib/vectorstore",
    "@websocket": "./lib/websocket"
  },
  "private": true
}
