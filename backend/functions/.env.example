# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key

# Pinecone Configuration
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=gcp-starter
PINECONE_INDEX_NAME=lexilot-legal-docs

# HuggingFace Configuration (f√ºr multilingual embeddings)
HUGGINGFACE_API_KEY=hf_your-huggingface-api-key

# Legal Database APIs (Optional)
FEDLEX_API_KEY=your-fedlex-api-key
GOOGLE_SCHOLAR_API_KEY=your-google-scholar-api-key

# Application Configuration
NODE_ENV=development
LOG_LEVEL=debug
API_VERSION=v1

# Security
JWT_SECRET=your-jwt-secret-key
ENCRYPTION_KEY=your-32-character-encryption-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cost Control
MAX_TOKENS_PER_REQUEST=4000
MAX_DAILY_COST_PER_USER=10.00
BUDGET_WARNING_THRESHOLD=0.8

# WebSocket Configuration
WEBSOCKET_CORS_ORIGIN=http://localhost:3000
WEBSOCKET_PORT=3001

# Document Processing
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf,docx,txt,md

# Cache Configuration
CACHE_TTL_EMBEDDINGS=86400
CACHE_TTL_ANALYSIS=3600

# Swiss Legal Sources
ADMIN_CH_API_ENDPOINT=https://fedlex.admin.ch/api
CANTONAL_LAWS_ENABLED=true

# Monitoring
SENTRY_DSN=your-sentry-dsn
ANALYTICS_ENABLED=true
