# ============================================================================
# LexPilot AI - Environment Configuration Template
# ============================================================================
# Kopiere diese Datei zu .env und fülle die Werte aus
# WICHTIG: Teile niemals echte API-Keys oder Secrets in Git-Repositories!

# ============================================================================
# FIREBASE CONFIGURATION
# ============================================================================
# Firebase Project ID (von Firebase Console)
FIREBASE_PROJECT_ID=lexilot-ai-dev

# Firebase Service Account Private Key (JSON Format, mit Anführungszeichen)
# Erhalte diesen von Firebase Console > Project Settings > Service Accounts
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nMIIEvQIBADANBgkqhkiG9w0BAQEFAASCBKcwggSjAgEAAoIBAQC...\n-----END PRIVATE KEY-----\n"

# Firebase Service Account Email
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@lexilot-ai-dev.iam.gserviceaccount.com

# ============================================================================
# OPENAI CONFIGURATION
# ============================================================================
# OpenAI API Key (von platform.openai.com)
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# OpenAI Embedding Model (Standard: text-embedding-3-small)
# Optionen: text-embedding-3-small, text-embedding-3-large
OPENAI_EMBEDDINGS_MODEL=text-embedding-3-small

# OpenAI Chat Model (Standard: gpt-4-turbo-preview)
# Optionen: gpt-4-turbo-preview, gpt-4o, gpt-3.5-turbo-1106
OPENAI_CHAT_MODEL=gpt-4-turbo-preview

# OpenAI Organization ID (optional)
OPENAI_ORG_ID=org-xxxxxxxxxxxxxxxxxxxxxxxx

# ============================================================================
# PINECONE CONFIGURATION (Vector Database)
# ============================================================================
# Pinecone API Key (von pinecone.io)
PINECONE_API_KEY=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Pinecone Environment
PINECONE_ENVIRONMENT=gcp-starter

# Pinecone Index Name
PINECONE_INDEX_NAME=lexilot-legal-docs

# ============================================================================
# HUGGINGFACE CONFIGURATION (Optional)
# ============================================================================
# HuggingFace API Key für alternative Embedding Models
HUGGINGFACE_API_KEY=hf_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
# Environment Type
NODE_ENV=development

# Log Level
LOG_LEVEL=info

# API Version
API_VERSION=v1

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
# JWT Secret (Mindestens 32 Zeichen, generiere mit: openssl rand -hex 32)
JWT_SECRET=your-super-secure-jwt-secret-key-here-minimum-32-chars

# Encryption Key (Mindestens 32 Zeichen, generiere mit: openssl rand -hex 32)
ENCRYPTION_KEY=your-super-secure-encryption-key-here-minimum-32-chars

# ============================================================================
# RATE LIMITING CONFIGURATION
# ============================================================================
# Rate Limits pro Benutzer
RATE_LIMIT_WINDOW_MS=900000          # 15 Minuten
RATE_LIMIT_MAX_REQUESTS=100          # Maximale Requests pro Fenster
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Rate Limits für OpenAI Calls
OPENAI_RATE_LIMIT_RPM=60             # Requests per minute
OPENAI_RATE_LIMIT_TPM=250000         # Tokens per minute

# ============================================================================
# COST CONTROL CONFIGURATION
# ============================================================================
# Token Limits
MAX_TOKENS_PER_REQUEST=4000          # Maximale Tokens pro Request
MAX_DAILY_COST_PER_USER=10.00        # Maximale tägliche Kosten pro Benutzer (USD)
BUDGET_WARNING_THRESHOLD=0.8         # Warnung bei 80% des Budgets

# OpenAI Cost Tracking
OPENAI_COST_PER_1K_TOKENS_GPT4=0.03
OPENAI_COST_PER_1K_TOKENS_GPT35=0.002

# ============================================================================
# WEBSOCKET CONFIGURATION
# ============================================================================
# WebSocket Server
WEBSOCKET_CORS_ORIGIN=http://localhost:3000
WEBSOCKET_PORT=3001
WEBSOCKET_HEARTBEAT_INTERVAL=30000   # 30 Sekunden
WEBSOCKET_MAX_CONNECTIONS=1000

# ============================================================================
# DOCUMENT PROCESSING CONFIGURATION
# ============================================================================
# File Upload Limits
MAX_FILE_SIZE_MB=50                  # Maximale Dateigröße in MB
ALLOWED_FILE_TYPES=pdf,docx,txt,md   # Erlaubte Dateitypen
MAX_PAGES_PER_DOCUMENT=500           # Maximale Seitenzahl pro Dokument

# Document Processing
ENABLE_OCR=false                     # OCR für gescannte PDFs
OCR_LANGUAGE=deu                     # Sprache für OCR (deu, eng, fra, ita)
CHUNK_SIZE=1000                      # Chunk-Größe für Dokumentensplitting
CHUNK_OVERLAP=200                    # Überlappung zwischen Chunks

# ============================================================================
# CACHE CONFIGURATION
# ============================================================================
# Cache TTL (Time To Live) in Sekunden
CACHE_TTL_EMBEDDINGS=86400           # 24 Stunden
CACHE_TTL_ANALYSIS=3600              # 1 Stunde
CACHE_TTL_USER_DATA=300              # 5 Minuten

# Redis Configuration (Optional für erweiterten Cache)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# ============================================================================
# SWISS LEGAL SOURCES CONFIGURATION
# ============================================================================
# Fedlex API (Bundesrecht)
ADMIN_CH_API_ENDPOINT=https://fedlex.admin.ch/api
FEDLEX_API_KEY=your-fedlex-api-key
FEDLEX_API_TIMEOUT=30000             # 30 Sekunden

# Kantonale Rechtsdatenbanken
CANTONAL_LAWS_ENABLED=true
ZURICH_LAW_API=https://zh.ch/api/law
GENEVA_LAW_API=https://ge.ch/api/law
BASEL_LAW_API=https://bs.ch/api/law

# Rechtsprechung
BGE_DATABASE_ENABLED=true            # Bundesgerichtsentscheide
CANTONAL_COURT_DECISIONS=true        # Kantonale Gerichtsentscheide

# ============================================================================
# MONITORING & ANALYTICS CONFIGURATION
# ============================================================================
# Error Tracking
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# Analytics
ANALYTICS_ENABLED=true
GOOGLE_ANALYTICS_ID=GA4-MEASUREMENT-ID

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLE_RATE=0.1

# Health Checks
HEALTH_CHECK_INTERVAL=60000          # 1 Minute
HEALTH_CHECK_TIMEOUT=5000            # 5 Sekunden

# Logging
LOG_LEVEL=info                       # debug, info, warn, error
LOG_TO_FILE=false
LOG_FILE_PATH=/tmp/lexilot.log

# ============================================================================
# FEATURE FLAGS
# ============================================================================
# Core Features
ENABLE_GDPR_ANALYSIS=true
ENABLE_CONTRACT_ANALYSIS=true
ENABLE_DOCUMENT_COMPARISON=true

# Language Support
ENABLE_MULTILINGUAL_SUPPORT=true
SUPPORTED_LANGUAGES=de,en,fr,it     # Deutsch, Englisch, Französisch, Italienisch

# AI Features
ENABLE_SUMMARIZATION=true
ENABLE_RISK_ASSESSMENT=true
ENABLE_COMPLIANCE_CHECK=true

# Experimental Features
ENABLE_BETA_FEATURES=false
ENABLE_AI_SUGGESTIONS=false

# ============================================================================
# DEVELOPMENT & TESTING CONFIGURATION
# ============================================================================
# Development Server
PORT=5001
DEBUG_MODE=false

# Debug Flags
DEBUG_CHAINS=false
DEBUG_EMBEDDINGS=false
DEBUG_STORAGE=false
DEBUG_ANALYSIS=false

# Test Configuration
TEST_DATABASE_URL=your-test-database-url
TEST_STORAGE_BUCKET=your-test-storage-bucket
TEST_OPENAI_API_KEY=your-test-openai-key

# Mock Services (für Tests)
MOCK_OPENAI_RESPONSES=false
MOCK_PINECONE_RESPONSES=false
MOCK_FIREBASE_SERVICES=false
